<UserControl x:Class="SignagePro.Main.UI.SignagePalette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignagePro.Main.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             Background="#F0F0F0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Seleccionar Señal" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <ListView Grid.Row="1" ItemsSource="{Binding AvailableSignals}"
                  SelectedItem="{Binding SelectedSignal}"
                  BorderBrush="Gray" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" Content="Crear Señal" 
                Command="{Binding CreateSignalCommand}"
                HorizontalAlignment="Stretch" 
                Margin="0,10,0,0" Padding="10" 
                Background="#007ACC" Foreground="White" 
                FontWeight="Bold" BorderThickness="0"/>

    </Grid>
</UserControl>

